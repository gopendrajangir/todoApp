extends home

block content 

  .login_container.m-5
    div.bg-dark.pt-4.pl-4.pr-4.text-light.rounded.d-flex.justify-content-center.login
      div.w-100
       h3.p-2.mb-4.text-light.border.d-flex.justify-content-center.border-light Login
       form(method="post", action="/login")
        .form-group
          label(for='username') Username
          input#username.form-control(type='text', name="username", placeholder='Enter username', required)
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name="password", placeholder='Password', required)
        .form-group.d-flex.justify-content-center.mt-3
          button.btn.btn-success.border.border-light(type='submit').w-100.m-1 Login
          a(href="/auth/facebook")
            input.btn.btn-dark.border.border-light.w-100.m-1(type="button", value="Login With Facebook") 
    div.d-flex.justify-content-center.m-2
      p Don't have an account &nbsp;
      a(href="/signup") Create new account
